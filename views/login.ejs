    <form action="/users/login" method="POST">
     
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      
      <div>
        <input
          type="password"
          id="password2"
          name="password2"
          placeholder="Confirm Password"
          required
        />
      </div>
      <div>
        <input type="submit" value="Login" />
      </div>

      <a href="/users/Register">Login</a>
    </form>

    
  
  </body>
